<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <Button
        android:id="@+id/convertButton"
        android:text="تحويل"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/numberET"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/numberET"
        android:text="9872677829654774585269"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:inputType="numberSigned"
        android:layout_toRightOf="@+id/convertButton"
        android:layout_toEndOf="@+id/convertButton" />

    <TextView
        android:id="@+id/wordsTV"
        android:text="تسعة سكستيليونات
و ثمانمائة و اثنان و سبعون كوينتليوناً
و ستمائة و سبعة و سبعون كوادريليوناً
و ثمانمائة و تسعة و عشرون تريليوناً و ستمائة
و أربعة و خمسون ملياراً
و سبعمائة و أربعة و سبعون مليوناً و خمسمائة
و خمسة و ثمانون ألفاً و مئتان و تسع و ستون

"

        android:padding="20dp"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numberET"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
